# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# OpenAI API Configuration (Alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# HuggingFace API Configuration
HUGGINGFACE_API_TOKEN=your_huggingface_token_here

# LLM Model Configuration
DEFAULT_LLM_MODEL=deepseek/deepseek-chat-v3-0324:free
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# API Usage Limits and Tracking
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_DAY=1000
MAX_REQUESTS_PER_MONTH=30000
ENABLE_USAGE_TRACKING=true
USAGE_DATABASE_PATH=./data/api_usage.db

# Fallback Model Configuration
ENABLE_FALLBACK_MODELS=true
FALLBACK_STRATEGY=ollama,huggingface

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# HuggingFace Configuration
HUGGINGFACE_DEFAULT_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_DEVICE=auto
HUGGINGFACE_QUANTIZATION=true

# PubMed Configuration
PUBMED_EMAIL=your_email@example.com
PUBMED_API_KEY=your_pubmed_api_key_here

# Europe PMC Configuration
EUROPEPMC_EMAIL=your_email@example.com

# UMLS Configuration
UMLS_API_KEY=your_umls_api_key_here

# Vector Database Configuration
FAISS_INDEX_PATH=./data/vector_indices
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Document Processing Configuration
MAX_DOCUMENT_SIZE=50MB
SUPPORTED_FORMATS=pdf,html,xml,txt
ENABLE_OCR=false
MAX_WORKERS=4
BATCH_SIZE=10

# Database Configuration
DATABASE_URL=sqlite:///./data/database/biomedical_data.db
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
CORS_ORIGINS=*

# Monitoring Configuration
LOG_LEVEL=INFO
LOG_FILE=
ENABLE_METRICS=true
METRICS_PORT=9090

# Application Configuration
DEBUG=false
ENVIRONMENT=development
