# ============================================================================
# BIOMEDICAL TEXT AGENT - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and configure your settings
# cp .env.example .env

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
DEBUG=false
ENVIRONMENT=development
VERSION=2.0.0

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///./data/database/biomedical_data.db
REDIS_URL=redis://localhost:6379/0
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
DB_MAX_CONNECTIONS=20
DB_CONNECTION_TIMEOUT=30
DB_ENABLE_WAL=true

# ============================================================================
# LLM PROVIDER CONFIGURATION
# ============================================================================
LLM_PROVIDER=openrouter
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# OpenRouter Configuration (Primary)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=deepseek/deepseek-chat-v3-0324:free

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-4

# HuggingFace Configuration (Local/Cloud)
HUGGINGFACE_API_TOKEN=hf_your-token-here
HUGGINGFACE_DEFAULT_MODEL=microsoft/DialoGPT-medium
HUGGINGFACE_DEVICE=auto
HUGGINGFACE_QUANTIZATION=true

# Ollama Configuration (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# API Usage Limits
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_DAY=1000
ENABLE_USAGE_TRACKING=true
ENABLE_FALLBACK_MODELS=true
FALLBACK_STRATEGY=openrouter,openai,huggingface,ollama

# ============================================================================
# PUBMED & EUROPE PMC CONFIGURATION
# ============================================================================
PUBMED_EMAIL=your-email@example.com
PUBMED_API_KEY=your-pubmed-api-key
EUROPEPMC_EMAIL=your-email@example.com
UMLS_API_KEY=your-umls-api-key
PUBMED_MAX_REQUESTS_PER_SECOND=10
PUBMED_REQUEST_DELAY=0.1

# ============================================================================
# PROCESSING CONFIGURATION
# ============================================================================
MAX_DOCUMENT_SIZE=50MB
SUPPORTED_FORMATS=pdf,html,xml,txt
ENABLE_OCR=false
MAX_WORKERS=4
BATCH_SIZE=10
CHUNK_SIZE=5000
CHUNK_OVERLAP=500
EXTRACTION_PASSES=2
USE_PATIENT_SEGMENTATION=true
CONFIDENCE_THRESHOLD=0.7

# ============================================================================
# VECTOR DATABASE CONFIGURATION
# ============================================================================
FAISS_INDEX_PATH=./data/vector_indices
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_MAX_RESULTS=100
VECTOR_SIMILARITY_THRESHOLD=0.7

# ============================================================================
# FILE PATH CONFIGURATION
# ============================================================================
DATA_DIR=./data
SCHEMAS_DIR=./data/schemas
ONTOLOGIES_DIR=./data/ontologies
OUTPUT_DIR=./data/output
LOGS_DIR=./logs
TEMP_DIR=./temp

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
CORS_ORIGINS=*
ENABLE_AUTH=false
SESSION_TIMEOUT=3600

# ============================================================================
# MONITORING & LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_PERFORMANCE_TRACKING=true
PERFORMANCE_SAMPLING_RATE=0.1

# ============================================================================
# UI CONFIGURATION
# ============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=8000
ENABLE_REAL_TIME_UPDATES=true
ENABLE_WEBSOCKETS=true
WEBSOCKET_PING_INTERVAL=30
DASHBOARD_REFRESH_INTERVAL=30
MAX_DASHBOARD_ITEMS=100

# ============================================================================
# LANGEXTRACT CONFIGURATION
# ============================================================================
# Note: LangExtract is configured through the LLM settings above
# The system will automatically use the configured LLM provider

# ============================================================================
# ONTOLOGY CONFIGURATION
# ============================================================================
# HPO and Gene ontologies are automatically downloaded and managed
# No additional configuration required

# ============================================================================
# RAG SYSTEM CONFIGURATION
# ============================================================================
# RAG system uses the vector database and LLM settings above
# No additional configuration required

# ============================================================================
# DEVELOPMENT & TESTING
# ============================================================================
# Uncomment for development
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENABLE_METRICS=false

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
# Uncomment for production
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_AUTH=true
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
