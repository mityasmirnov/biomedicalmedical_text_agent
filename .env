# Biomedical Data Extraction Engine - Environment Configuration

# OpenRouter API (Primary LLM provider - Free tier available)
OPENROUTER_API_KEY=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
OPENROUTER_API_BASE=https://openrouter.ai/api/v1

# OpenAI API (Alternative provider - Optional)
OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1

# Hugging Face (Local models - Optional)
HUGGINGFACE_API_TOKEN=

# Default model to use
DEFAULT_LLM_MODEL=deepseek/deepseek-chat-v3-0324:free
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# Performance settings
MAX_WORKERS=4
BATCH_SIZE=10
MAX_DOCUMENT_SIZE=50MB
ENABLE_OCR=false

# Document chunking
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# SQLite database
DATABASE_URL=sqlite:///data/database/biomedical_data.db

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379/0

# Neo4j (Optional - for graph database)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# FAISS index path
FAISS_INDEX_PATH=./data/vector_indices

# Embedding model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Main directories
DATA_DIR=./data
SCHEMAS_DIR=./data/schemas
ONTOLOGIES_DIR=./data/ontologies
OUTPUT_DIR=./data/output

# Secret keys (Change in production!)
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# CORS origins
CORS_ORIGINS=*

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
LOG_FILE=./logs/application.log

# Enable additional features
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_SENTRY=false

# Development mode
DEBUG=false
TESTING=false

# API rate limiting
RATE_LIMIT_PER_MINUTE=60
